<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDE7F6"
    tools:context=".EasyGameActivity">

    <TextView
        android:id="@+id/tvUserPercentage_easy"
        android:layout_width="197dp"
        android:layout_height="62dp"
        android:layout_marginTop="220dp"
        android:fontFamily="@font/caesar_dressing"
        android:text="42 %"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#4CAF50"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTimeLeft"
        android:layout_width="108dp"
        android:layout_height="64dp"
        android:fontFamily="@font/caesar_dressing"
        android:text="15"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#B71C1C"
        android:textSize="42sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTimeLeftLabel"
        app:layout_constraintVertical_bias="0.274" />

    <TextView
        android:id="@+id/tvTimeLeftLabel"
        android:layout_width="231dp"
        android:layout_height="49dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/caesar_dressing"
        android:text="Time Left"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#3949AB"
        android:textSize="42sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBar_Easy" />

    <TextView
        android:id="@+id/tvGoalPercentage_easy"
        android:layout_width="205dp"
        android:layout_height="58dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/caesar_dressing"
        android:text="42 %"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#D81B60"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvGameTitle" />

    <TextView
        android:id="@+id/tvGameTitle"
        android:layout_width="313dp"
        android:layout_height="101dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/caesar_dressing"
        android:text="Match the Percentage"
        android:textAlignment="center"
        android:textColor="#3949AB"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/seekBar_Easy"
        android:layout_width="296dp"
        android:layout_height="317dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="184dp"
        android:rotation="270"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvUserPercentage_easy" />

</androidx.constraintlayout.widget.ConstraintLayout>